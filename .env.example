# Application Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=mongodb://localhost:27017/noion
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/noion?retryWrites=true&w=majority

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Toast POS Integration
TOAST_CLIENT_ID=your-toast-client-id
TOAST_CLIENT_SECRET=your-toast-client-secret
TOAST_API_URL=https://ws-api.toasttab.com
TOAST_REDIRECT_URI=http://localhost:3000/api/auth/toast/callback

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PRICE_ID_PULSE=price_xxxxx
STRIPE_PRICE_ID_INTELLIGENCE=price_xxxxx
STRIPE_PRICE_ID_COMMAND=price_xxxxx

# Email Service (SendGrid or AWS SES)
# Option 1: SendGrid
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@noion.ai
SENDGRID_FROM_NAME=NOION Analytics

# Option 2: AWS SES
# AWS_ACCESS_KEY_ID=xxxxx
# AWS_SECRET_ACCESS_KEY=xxxxx
# AWS_REGION=us-east-1
# SES_FROM_EMAIL=noreply@noion.ai

# AWS S3 (for report storage)
AWS_ACCESS_KEY_ID=xxxxx
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_S3_BUCKET=noion-reports
AWS_S3_REGION=us-east-1

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Square POS Integration (future)
# SQUARE_APP_ID=xxxxx
# SQUARE_ACCESS_TOKEN=xxxxx

# Clover POS Integration (future)
# CLOVER_APP_ID=xxxxx
# CLOVER_APP_SECRET=xxxxx

# Analytics & Monitoring
# SENTRY_DSN=xxxxx
# GOOGLE_ANALYTICS_ID=G-xxxxx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this
ENCRYPTION_ALGORITHM=aes-256-gcm
